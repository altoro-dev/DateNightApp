<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Dark Theme for Date Night App

        This theme is automatically activated when the user's phone is in dark mode.
        Colors are designed to match your romantic app icon while being easy on the eyes at night.

        DARK MODE BEST PRACTICES:
        - Use darker backgrounds (#121212 is Google's Material Design standard)
        - Reduce contrast (not pure black/white)
        - Keep accent colors vibrant but slightly desaturated
        - Maintain visual hierarchy with elevation
    -->
    <style name="Theme.DateNightApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color - Deep purple (darker for night) -->
        <item name="colorPrimary">#5A3D7A</item>
        <item name="colorPrimaryVariant">#3D2654</item>
        <item name="colorOnPrimary">#E8E0F0</item>

        <!-- Secondary color - Muted pink for night -->
        <item name="colorSecondary">#D968A0</item>
        <item name="colorSecondaryVariant">#B8547A</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E1E1E1</item>

        <!-- Status bar - darker purple for night -->
        <item name="android:statusBarColor">#3D2654</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#121212</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">#E1E1E1</item>
        <item name="android:textColorSecondary">#B3B3B3</item>
    </style>
</resources>