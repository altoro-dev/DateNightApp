<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6B4C9A"
            app:titleTextColor="#FFFFFF" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBarLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Level Title -->
            <TextView
                android:id="@+id/levelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ice Breaker ðŸ§Š"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#6B4C9A"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Progress -->
            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/100"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginBottom="32dp" />

            <!-- Question Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="32dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="32dp">

                    <!-- Question Text -->
                    <TextView
                        android:id="@+id/questionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What's your ideal date night?"
                        android:textSize="20sp"
                        android:textColor="#333333"
                        android:lineHeight="32dp"
                        android:gravity="center" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@android:drawable/btn_star_big_off"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add to favorites"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap star to save as favorite"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginBottom="32dp" />

            <!-- Next Button -->
            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Next Question â†’"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#6B4C9A"
                android:textColor="#FFFFFF" />

            <!-- Helper Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discuss this question together,\nthen tap Next to continue"
                android:textSize="14sp"
                android:textColor="#999999"
                android:gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>